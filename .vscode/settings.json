{
    "python.defaultInterpreterPath": ".venv\\Scripts\\python.exe",
    "git.ignoreLimitWarning": false,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.autopep8",
    },
    "[jinja-html]": {
        "editor.formatOnSave": true,
    },
    "autopep8.args": [
        "--ignore=E501",
        "--exclude=__pycache__,*.egg-info,venv/,.venv/,*.pyc",
    ],
    "cSpell.ignorePaths": [
        "**/*",
    ],
    "python.testing.pytestArgs": [
        "src/file_conversor/tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "files.exclude": {
        "**/.coverage/**": true,
        "**/.coverage*/**": true,
        "**/.import_linter_cache/**": true,
        "**/.pytest_cache/**": true,
        "**/.pdm-python/**": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/node_modules/**": true,
        "**/Thumbs.db": true,
        "**/coverage.xml": true,
        "**/*.spec": true,
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.cache": true,
        "**/.pytest_cache": true,
        "**/.pdm-python": true,
        "**/.venv": true,
        "**/venv": true,
        "**/build": true,
        "**/dist": true,
        "**/htmlcov": true,
        "**/pdm.lock": true,
        "**/coverage.xml": true,
        "**/*.spec": true,
    },
    "sonarlint.connectedMode.project": {
        "connectionId": "andre-romano",
        "projectKey": "andre-romano_file_conversor"
    },
}