{
    "python.defaultInterpreterPath": ".venv\\Scripts\\python.exe",
    "git.ignoreLimitWarning": false,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.autopep8",
    },
    "[jinja-html]": {
        "editor.formatOnSave": true,
    },
    "autopep8.args": [
        "--ignore=E501",
        "--exclude=__pycache__,*.egg-info,venv/,.venv/,*.pyc",
    ],
    "cSpell.ignorePaths": [
        "**/*",
    ],
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "files.exclude": {
        "**/.coverage/**": true,
        "**/.coverage*/**": true,
        "**/.pytest_cache/**": true,
        "**/.pdm-python/**": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/htmlcov": true,
        "**/Thumbs.db": true,
        "**/*.spec": true,
        "**/pdm.lock/**": true,
    },
    "eslint.options": {
        "overrideConfigFile": "eslint.config.mjs"
    },
    "eslint.validate": [
        "javascript",
        "html",
        "jinja",
        "jinja2",
        "jinja-html",
    ],
    "emmet.includeLanguages": {
        "jinja": "html",
        "jinja2": "html",
        "jinja-html": "html"
    },
    "files.associations": {
        "*.j2": "jinja-html",
        "*.jinja": "jinja-html",
        "*.jinja2": "jinja-html"
    },
}